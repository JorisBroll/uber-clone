<% if flash[:success] %>
  <div class="flash alert alert-success" role="alert">
  	<%= flash[:success] %>
  </div>
<% end %>
<% if flash[:notice] %>
  <div class="flash alert alert-warning" role="alert">
  	<%= flash[:notice] %>
  </div>
<% end %>
<% if flash[:error] %>
  <div class="flash alert alert-danger" role="alert">
  	<%= flash[:error] %>
  </div>
<% end %>