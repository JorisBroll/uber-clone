<h1>Ajouter un utilisateur</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    	<%= render 'common/error_messages' %>
      <%= f.text_field :name, :placeholder => "Nom" %>

      <%= f.label :email %>
      <%= f.text_field :email, :placeholder => "Email" %>

      <%= f.label :account_type, "Type de compte" %>
      <%= f.select(:account_type, User::Account_type_alias.reverse) %>

      <%= f.label :password, "Mot de passe" %>
      <%= f.password_field :password, :placeholder => "Mot de passe" %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, :placeholder => "Confirmation" %>

      <%= f.submit "CrÃ©er le compte", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

