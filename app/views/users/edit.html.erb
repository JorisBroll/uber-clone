<h1>Page pour éditer un utilisateur et ses détails</h1>
<%= form_for(@user) do |f| %>
	<%= render 'common/error_messages' %>
	<%= f.text_field :name, :placeholder => "Nom" %>

	<%= f.label :email %>
	<%= f.text_field :email, :placeholder => "Email" %>

	<%= f.label :account_type, "Type de compte" %>
	<%= f.select(:account_type, User::Account_type_alias.reverse) %>

	<%= f.label :password, "Mot de passe" %>
	<%= f.password_field :password, :placeholder => "Mot de passe" %>

	<%= f.label :password_confirmation, "Confirmation" %>
	<%= f.password_field :password_confirmation, :placeholder => "Confirmation" %>

	<%= f.submit "Éditer le compte", class: "btn btn-large btn-primary" %>
<% end %>

<%= link_to "Retour aux utilisateurs", users_path %>