<h1>Utilisateurs</h1>

<script>
	init.push(function () {
		$('#jq-datatables-example').dataTable();
		$('#jq-datatables-example_wrapper .table-caption').text('Liste des utilisateurs');
		$('#jq-datatables-example_wrapper .dataTables_filter input').attr('placeholder', 'Recherche...');
	});
</script>

<div class="table-primary">
	<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="jq-datatables-example">
		<thead>
			<tr>
				<th>#</th>
				<th>Nom Prénom</th>
				<th>Email</th>
				<th>Compte</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= user.name %></td>
				<td><%= user.email %></td>
				<td><%= user.account_type %></td>
				<td style="text-align:center; font-size:16px;"><%= link_to admin_user_path(user), { :title => "Voir" } do %><i class="menu-icon fa fa-eye"></i><% end %> | <%= link_to edit_admin_user_path(user), { :title => "Editer" } do %><i class="menu-icon fa fa-pencil"></i><% end %> | <%= link_to admin_user_path(user), { :title => "Supprimer" }, method: :delete, data: { confirm: "Êtes-vous sur ?" } do %><i class="menu-icon fa fa-trash-o"></i><% end %></td>
			</tr>
		<% end %>
		</tbody>
	</table>
</div>

<%= link_to(new_admin_user_path) do %>

<button class="btn btn-flat btn-labeled btn-primary">

    <span class="btn-label icon fa fa-user"></span>

    Ajouter un utilisateur

</button>

<% end %>

