<div class="page-header">
	<div class="row">
		<h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-dashboard page-header-icon"></i>&nbsp;&nbsp;Accueil</h1>
	</div>
</div>
<div class="row">
	<div class="col-md-7">
		<div class="panel panel-dark panel-light-green">
			<div class="panel-heading">
				<span class="panel-title"><i class="panel-title-icon fa fa-users"></i>Nouveaux utilisateurs</span>
			</div>
			<table class="table">
				<thead>
					<tr>
						<th>#</th>
						<th>Nom</th>
						<th>Photo</th>
						<th>E-mail</th>
						<th>Compte</th>
					</tr>
				</thead>
				<tbody class="valign-middle">
					<% @users.each do |user| %>
						<tr>
							<td><%= user.id %></td>
							<td><%= build_name(user) %></td>
							<td><img src="<%= image_path('pixel-admin/avatar.png') %>" alt="<%= user.name %>" style="width:26px;height:26px;" class="rounded"></td>
							<td><%= user.email %></td>
							<td><%= user.account_type %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>